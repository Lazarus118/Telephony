<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="co.aulatech.telephony.MainActivity"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_list"
        android:textSize="30sp"
        android:background="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textColor="#fff"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        tools:text="@string/text_chatting" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/chatInput"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="5dp"
        android:background="#fff"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:foregroundTint="#000"/>

    <EditText
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:text="Enter Message"
        android:ems="10"
        android:id="@+id/mailInput"
        android:background="#fff"
        android:layout_below="@+id/chatInput"/>

    <Button
        android:text="@string/chat_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chatSubmit"
        android:layout_below="@+id/chatInput"
        android:layout_alignEnd="@+id/mailInput"
        android:layout_alignRight="@+id/mailInput" />

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/goBack"
        android:background="#000"
        android:textColor="#fff"
        android:layout_below="@+id/chatSubmit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        tools:text="@string/go_back" />

</RelativeLayout>
