<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.nkzawa.socketio.androidchat" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <user-feature android:name="android.hardware.camera"
                  android:required="true"/>

    <application
        android:allowBackup="true"
        android:name="com.github.nkzawa.socketio.androidchat.ChatApplication"
        android:icon="@drawable/ic_launcher"
        android:label="Communication App"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.github.nkzawa.socketio.androidchat.MainActivity"
            android:label="Communication App"
            android:icon="@drawable/ic_launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.github.nkzawa.socketio.androidchat.MainActivityLogin"
            android:label="Communication App"
            android:icon="@drawable/ic_launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.github.nkzawa.socketio.androidchat.CreateOrEditActivity"
            android:label="@string/add_new_contact"
            android:icon="@drawable/ic_launcher"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.github.nkzawa.socketio.androidchat.LoginActivity"
            android:label="@string/app_name"
            android:icon="@drawable/ic_launcher"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.github.nkzawa.socketio.androidchat.PersonalClass"
            android:label="@string/personal_details"
            android:icon="@drawable/ic_launcher" >
        </activity>
        <activity
            android:name="com.github.nkzawa.socketio.androidchat.VideoClass"
            android:label="@string/video_chat"
            android:icon="@drawable/ic_launcher" >
        </activity>
        <activity
            android:name="com.github.nkzawa.socketio.androidchat.SearchClass"
            android:label="@string/search"
            android:icon="@drawable/ic_launcher" >
        </activity>
        <activity
            android:name="com.github.nkzawa.socketio.androidchat.SmsClass"
            android:label="@string/send_sms"
            android:icon="@drawable/ic_launcher" >
        </activity>
        <activity
            android:name="com.github.nkzawa.socketio.androidchat.EmailClass"
            android:label="@string/send_email"
            android:icon="@drawable/ic_launcher" >
        </activity>
    </application>

</manifest>
